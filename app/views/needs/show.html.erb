<div class="container">
  <div class="row center-form align-items-center">
    <div class="col-10 offset-1 col-md-6 offset-md-3 text-center font-weight-bolder mt-3 mb-3">
      <% if @need.services.empty? %>
        <%= render "no_service" %>
      <% elsif @service.in_progress? %>
        <%= render "in_progress" %>
        <%= render "chatroom_show" if current_user == @owner || current_user == @helper %>
      <% elsif @service.reimbursement? %>
        <%= render "reimbursement" %>
        <%= render "chatroom_show" if current_user == @owner || current_user == @helper %>
      <% elsif @service.done? %>
        <%= render "done" %>
        <%= render "chatroom_show" if current_user == @owner || current_user == @helper %>
      <% end %>
    </div>
  </div>
</div>