<div class="container">
  <div class="row center-form align-items-center">
    <div class="col-10 offset-1 col-md-6 offset-md-3">
      <h3 class="text-center font-weight-bolder">LOG IN</h3>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "need-form mt-3" }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: "EMAIL ADDRESS",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: "PASSWORD",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "REMEMBER ME", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", input_html: { class: "need-form-input" } %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>